<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PriorityActivity">

    <Button
        android:id="@+id/buttonErledigt"
        android:layout_width="305dp"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#007DF0"
        android:text="Erledigt"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonSp채ter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDringend" />

    <Button
        android:id="@+id/buttonSp채ter"
        android:layout_width="301dp"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#B60E87"
        android:text="Sp채ter"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonOk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonErledigt" />

    <Button
        android:id="@+id/buttonDringend"
        android:layout_width="305dp"
        android:layout_height="56dp"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#DE3333"
        android:text="Dringend"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonErledigt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="305dp"
        android:layout_height="56dp"
        android:layout_marginBottom="220dp"
        android:backgroundTint="#49A663"
        android:text="Ok"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSp채ter" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="231dp"
        android:layout_height="57dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="16dp"
        android:text="Ist das Video zutreffend? "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDringend"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>