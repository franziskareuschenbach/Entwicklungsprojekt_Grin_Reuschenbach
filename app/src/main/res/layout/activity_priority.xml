<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PriorityActivity">

    <Button
        android:id="@+id/buttonErledigt"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#007DF0"
        android:text="Erledigt"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonSpäter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDringend" />

    <Button
        android:id="@+id/buttonSpäter"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#B60E87"
        android:text="Später"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonOk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonErledigt" />

    <Button
        android:id="@+id/buttonDringend"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#DE3333"
        android:text="Dringend"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonErledigt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_marginBottom="220dp"
        android:backgroundTint="#49A663"
        android:text="Ok"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSpäter" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="231dp"
        android:layout_height="57dp"
        android:layout_marginBottom="16dp"
        android:text="@string/karte_einordnen"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDringend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageButton
        android:id="@+id/frageButtonDringend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@+id/buttonDringend"
        app:layout_constraintTop_toTopOf="@+id/buttonDringend"
        app:srcCompat="@mipmap/questionmark" />

    <ImageButton
        android:id="@+id/frageButtonErledigt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@+id/buttonErledigt"
        app:layout_constraintTop_toTopOf="@+id/buttonErledigt"
        app:srcCompat="@mipmap/questionmark" />

    <ImageButton
        android:id="@+id/frageButtonSpaeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@+id/buttonSpäter"
        app:layout_constraintTop_toTopOf="@+id/buttonSpäter"
        app:srcCompat="@mipmap/questionmark" />

    <ImageButton
        android:id="@+id/frageButtonOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@+id/buttonOk"
        app:layout_constraintTop_toTopOf="@+id/buttonOk"
        app:srcCompat="@mipmap/questionmark" />


</androidx.constraintlayout.widget.ConstraintLayout>
